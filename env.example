# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789
VITE_FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# Optional: Google Analytics (if different from Firebase Analytics)
VITE_GA_MEASUREMENT_ID=G-ABCDEFGHIJ

# Optional: Sentry for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# API Configuration
VITE_API_BASE_URL=https://us-central1-your-project-id.cloudfunctions.net/api
VITE_SCRYFALL_API_BASE=https://api.scryfall.com

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_A11Y_TESTING=false

# Cache settings
VITE_CACHE_TTL=3600000
VITE_MAX_CACHE_SIZE=100 